{% extends 'base.html.twig' %}

{% block title %}Create new Book
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">
						<h1>Create new Book âœ…</h1>
					</div>

					<div class="card-body">
						<form action="{{path('book_store')}}" method="POST">

							<div class="form-group">
								<label>Title:</label>
								<input type="text" class="form-control" name="book_title" value="{{book_title}}">
								<small class="form-text text-muted">Book title.</small>
							</div>

							<div class="form-group">
								<label>ISBN:</label>
								<input type="text" class="form-control" name="book_isbn" value="{{book_isbn}}">
								<small class="form-text text-muted">Book ISBN code.</small>
							</div>

							<div class="form-group">
								<label>Pages:</label>
								<input type="text" class="form-control" name="book_pages" value="{{book_pages}}">
								<small class="form-text text-muted">Pages count.</small>
							</div>


							<div class="form-group">
								About:<textarea name="book_about" id="summernote" value="{{book_about}}"></textarea>
							</div>
							<div class="form-group">
								<select name="book_author_id" class="form-control">
									<option value="0">Select author</option>
									{% for author in authors %}
										<option value="{{author.id}}">{{author.name}}
											{{author.surname}}</option>
									{% endfor %}
								</select>
							</div>

							<button type="submit" class="btn btn-dark">Add new Book</button>
							<input type="hidden" name="token" value="{{ csrf_token('create_book_bla') }}"/>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
